# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
    ${HOME}/yocto-data/raspberry-zero/poky/meta \
    ${HOME}/yocto-data/raspberry-zero/poky/meta-poky \
    ${HOME}/yocto-data/raspberry-zero/poky/meta-openembedded/meta-oe \
    ${HOME}/yocto-data/raspberry-zero/poky/meta-openembedded/meta-multimedia \
    ${HOME}/yocto-data/raspberry-zero/poky/meta-openembedded/meta-networking \
    ${HOME}/yocto-data/raspberry-zero/poky/meta-openembedded/meta-python \
    ${HOME}/yocto-data/raspberry-zero/poky/meta-raspberrypi \
    ${HOME}/yocto-data/raspberry-zero/poky/meta-qt5 \    
    ${HOME}/yocto-data/raspberry-zero/poky/meta-snake-zero \
  "
